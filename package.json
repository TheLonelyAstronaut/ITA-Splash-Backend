{
  "name": "ITA-Splash-Backend",
  "version": "1.0.0",
  "repository": "https://github.com/TheLonelyAstronaut/ITA-Splash-Server.git",
  "author": "孤独な 宇宙飛行士 <vadim1230981@gmail.com>",
  "license": "MIT",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npm run clean && tsc",
    "start": "node ./dist/server.js",
    "postinstall": "npm run build",
    "start:dev": "node --inspect=5858 -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon start:dev",
    "typecheck": "tsc -p tsconfig.spec.json",
    "clean": "(rm -r ./.nyc_output || true) && (rm -r ./coverage || true) && (rm -r ./dist || true)",
    "clean:all": "npm run clean && (rm -r ./node_modules || true)",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier:check": "prettier --check \"**/*.{ts,md}\" --config .prettierrc",
    "prettier:write": "prettier --write \"**/*.{ts,md}\" --config .prettierrc"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.8",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.14.6",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "chai": "^4.1.2",
    "conventional-changelog-cli": "^2.0.12",
    "coveralls": "^3.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^7.12.1",
    "eslint-plugin-import": "^2.22.1",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^1.0.2",
    "graphql-import-node": "0.0.4",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.6",
    "nyc": "^15.0.0",
    "prettier": "^2.2.1",
    "source-map-support": "^0.5.12",
    "ts-node": "^9.0.0",
    "tslint": "^6.0.0",
    "typescript": "^4.0.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^1.0.0-rc.4",
    "@aws-sdk/node-http-handler": "^1.0.0-rc.3",
    "@aws-sdk/types": "^1.0.0-rc.3",
    "@types/validator": "^13.1.0",
    "apollo-server-express": "^2.19.0",
    "apollo-upload-client": "^14.1.3",
    "aws-s3": "^2.0.5",
    "aws-sdk": "^2.788.0",
    "buffer": "^6.0.1",
    "compression": "^1.7.4",
    "connected-react-router": "^6.8.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "fs": "^0.0.1-security",
    "graphql": "^15.4.0",
    "graphql-upload": "^11.0.0",
    "http": "^0.0.1-security",
    "ncp": "^2.0.0",
    "path": "^0.12.7",
    "pg": "^8.4.2",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.3.5",
    "sitka": "^1.0.5",
    "stream": "^0.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged",
      "pre-push": "npm run lint && npm run typecheck && npm run prettier:check"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,css,md}": "prettier --write"
  }
}
